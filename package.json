{
  "name": "hardhat-template",
  "description": "A hardhat template for contract & SDK development",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn build:abi && hardhat compile --force && tsc",
    "build:abi": "typechain --target=ethers-v5 src/abi/*.json --out-dir src/types/abi",
    "test": "hardhat test --logs",
    "test:w": "hardhat watch test --logs",
    "format": "prettier --write .",
    "cover": "nyc yarn test",
    "cover:sol": "HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "lint": "yarn eslint --fix .",
    "lint:report": "yarn eslint --ext .ts --output-file eslint_report.json --format json ."
  },
  "keywords": [],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.22",
    "@types/eslint": "^7.28.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.1",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.6.4",
    "hardhat-deploy": "^0.9.2",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "hardhat-watcher": "^2.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "ethers": "^5.4.7",
    "node-fetch": "^3.0.0"
  }
}
